<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as the root if you plan to include a navigation drawer -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content layout -->

    <!-- NavigationView for the navigation drawer -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6C668">


        <!-- Other buttons like next, previous, and close can be added here -->
        <!-- Navigation Drawer -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="367dp"
            android:layout_height="356dp"

            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sun" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="#00FFFFFF"
            android:rotationX="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="94dp"
            android:layout_height="96dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#00FFFFFF"
            android:rotationX="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

        <LinearLayout
            android:id="@+id/currentSongContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPlayPause"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/currentSongAlbumCover"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_album_cover" />

            <TextView
                android:id="@+id/currentSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Song Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentSongArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/currentSongDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:45"
                android:textSize="16sp" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="177dp"
            android:layout_height="147dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="98dp"
            android:backgroundTint="#00FFFFFF"
            android:rotationX="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSongList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnPlayPause"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="2dp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fade_overlay" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>