<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day_gradient"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/_004778_menu_list_navigation_options_icon"
        android:contentDescription="Menu Icon"/>

    <!-- Label for the slider, placed below the SeekBar -->
    <TextView
        android:id="@+id/tvSliderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#543C26"
        android:textSize="15sp"
        android:textStyle="bold"

        android:text="My Music                                            Recommendations" />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRefreshLibraryData"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:text="Refresh Library Data"
        android:textColor="#FFFFFF"
        app:iconTint="#000000"
        app:layout_constraintDimensionRatio="1:1" />


</LinearLayout>