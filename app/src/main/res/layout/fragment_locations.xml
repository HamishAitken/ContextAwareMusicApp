<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/day_gradient"
    android:windowSoftInputMode="adjustNothing">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/_004778_menu_list_navigation_options_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/labelHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home:"
            android:textColor="#543C26"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/editTextHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/labelHome"
            android:layout_toLeftOf="@id/checkHome"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="text"
            android:text="56.45806050801304, -2.976413328769624"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/checkHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/labelWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work:"
            android:textColor="#543C26"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/editTextWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/labelWork"
            android:layout_toLeftOf="@id/checkWork"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageView
            android:id="@+id/checkWork"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/labelGym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym:"
            android:textColor="#543C26"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/editTextGym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/labelGym"
            android:layout_toLeftOf="@id/checkGym"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageView
            android:id="@+id/checkGym"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>